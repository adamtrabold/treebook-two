<div class="row">
  <div class="span4 offset4">
    <h2 style="text-align:center;">Signing up is easy and secure.</h2>
    <fieldset>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
      <%= devise_error_messages! %>

      <legend>Sign Up</legend>

      <%= f.input :first_name %>

      <%= f.input :last_name %>

      <%= f.input :profile_name %>

      <%= f.input :email %>

      <%= f.input :password %>

      <%= f.input :password_confirmation %>

      <div><%= f.button :submit, "Sign up" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
    </fieldset>
  </div>
</div>